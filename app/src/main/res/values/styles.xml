<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/themePrimary2</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/themePrimary_Dark2</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/themeAccent2</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/themePrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/themePrimary_Dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/themeAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
